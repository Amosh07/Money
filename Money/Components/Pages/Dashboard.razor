@page "/dashboard"
@using DataModel.Common.Base
@using DataModel.Model
@using Money.Components.Layout

<MudContainer>
    <div>
        <MudGrid>
            <MudItem xs="12" sm="4" md="3">
                <NavMenu />
            </MudItem>
            <MudItem xs="12" sm="8" md="9">
                <MudCard>
                    <MudCardContent>
                        <h1>Welcome to the Dashboard</h1>
                         <MudText Typo="Typo.h6" Align="Align.Right">Current Balance: @CurrentBalance.ToString("C")</MudText>
                        <MudGrid>
                            <MudItem xs="12" sm="6">
                                <MudPaper Class="pa-4">
                                    <DonutChart T="Transactions" Items="Transactions" XValue="@(e => e.Title)" YValue="@(e => e.TransactionAmount)" />
                                </MudPaper>
                            </MudItem>
                            <MudItem xs="12" sm="6">
                                @if (Transactions == null)
                                {
                                    <Loader />
                                }
                                else
                                {
                                    <MudPaper Class="p-4">
                                        <MudText Typo="Typo.h5" GutterBottom>Top 5 Highet Transaction</MudText>
                                        <div class="table-responsive">
                                            <table class="table country-table">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Title</th>
                                                        <th>Date</th>
                                                        <th>Transaction Amount</th>
                                                        <th>Transaction Type</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Transactions)
                                                    {
                                                        <tr>
                                                            <td>@(Transactions.IndexOf(item) + 1).</td>
                                                            <td>@item.Title</td>
                                                            <td>@item.TransactionDate</td>
                                                            <td>@item.TransactionAmount.ToString("C")</td>
                                                            <td>@Enum.GetName(typeof(TransactionTypes), item.TransactionTypes)
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </MudPaper>
                                }
                            </MudItem>
                        </MudGrid>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </div>
</MudContainer>

<style>
    .dashboard-container {
        padding: 1.5rem;
        background-color: #000000;
    }

    .dashboard-grid {
        gap: 1rem;
        background-color: #6A1B9A;
    }

    .nav-menu-card {
        background-color: #000000;
        border-radius: 8px;
    }

    .main-content-card {
        background-color: #ffffff;
        border-radius: 8px;
        padding: 1rem;
    }

    .dashboard-title {
        color: #424242;
        font-weight: bold;
    }

    .dashboard-text {
        color: #AA00FF;
        margin-top: 0.5rem;
        font-weight: bold;
    }
</style>


