@page "/login"

<div class="form-login">
    <form class="text-center shadow-lg p-5 rounded-start bg-light-purple table-borderless" @onsubmit="HandleLogin">
        <style>
            .bg-light-purple {
                background-color: #6A1B9A; /* purple color */
            }

            .form-control {
                border: 1px solid #4A0072;
                border-radius: 10px;
            }

            .form-control:focus {
                border-color: #D500F9;
                box-shadow: 0 0 5px rgba(213, 0, 249, 0.5);
            }

            .form-floating label {
                color: #D1C4E9;
            }

            .form-floating input::placeholder {
                color: #B39DDB;
            }

            .form-floating label {
                font-weight: bold;
            }

            .shadow-lg {
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

            .alert-danger {
                background-color: #E57373;
                border-color: #E53935;
                color: #FFFFFF;
                border-radius: 5px;
            }

            button {
                background-color: #8E24AA;
                border: none;
                color: white;
                padding: 10px 20px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
                border-radius: 10px;
                transition: background-color 0.3s ease;
            }

            button:hover {
                background-color: #7B1FA2;
            }

            .mb-3 img {
                border-radius: 10px;
            }

            .h3 {
                color: #E1BEE7;
                font-family: Arial, sans-serif;
            }

            .navbar-text {
                color: #F3E5F5;
                font-size: 16px;
            }
        </style>
        <img class="mb-3" src="/appicon.png" alt="" height="70">
        <h1 class="h3 mb-3 fw-bolder text-md-center shadow-lg p-lg-0" style="color: #F3E5F5;">Welcome to User</h1>
        <p class="mb-4 navbar-text shadow-sm pa-4" style="color: #F3E5F5;">Please enter your credentials</p>

        <!-- Username Input -->
        <div class="form-floating mb-3">
            <input type="text" class="form-control" @bind="Users.UserName" placeholder="Username" />
            <label for="floatingInput">Username</label>
        </div>

        <!-- Password Input -->
        <div class="form-floating mb-3">
            <input type="password" class="form-control" @bind="Users.Password" placeholder="Password" />
            <label for="floatingPassword">Password</label>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
                <div class="alert alert-danger">@ErrorMessage</div>
        }
        <button class="MudButton">Login</button>
    </form>
</div>

